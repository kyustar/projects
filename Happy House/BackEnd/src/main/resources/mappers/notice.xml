	<select id="selectListNotice" resultType="com.ssafy.happyhouse.dto.Notice">
		SELECT 
			`no`, `title`, `writer`, `content`, `regtime`
		FROM 
			`notice` 
		ORDER BY
			`no` DESC
		LIMIT 
			#{offset}, #{records}

	</select>
	
	<select id="selectCountNotice" resultType="java.lang.Integer">
		SELECT 
			COUNT(*) 
		FROM 
			`notice` 
	</select>

	<!-- 특정 조회 -->
	<select id="selectNoticeByNo" resultType="com.ssafy.happyhouse.dto.Notice">
		SELECT 
			`no`, `title`, `writer`, `content`, `regtime`
		FROM 
			`notice` 
		WHERE 
			`no` = #{no}
	</select>

	<!-- 게시글 등록 -->
	<insert id="insertNotice">
		INSERT INTO `notice`
		(
			`title`,
			`writer`,
			`content`
		) 
		VALUES
		(
			#{title}, 
			#{writer}, 
			#{content}
		)
	</insert>

	<!-- 게시글 수정 -->
	<update id="updateNotice">
		UPDATE 
			`notice` 
		SET 
			`title` = #{title}, 
			`writer` = #{writer}, 
			`content` = #{content}
		WHERE 
			`no` = #{no}
	</update>

	<!-- 게시글 삭제 -->
	<delete id="deleteNotice">
		DELETE FROM 
			`notice` 
		WHERE 
			`no` = #{no}
	</delete>

</mapper>

